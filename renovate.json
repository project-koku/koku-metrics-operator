{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>konflux-ci/mintmaker-presets:group-python-poetry"
    ],
    "tekton": {
        "includePaths": [
            ".tekton/**"
        ]
    },
    "enabledManagers": ["tekton", "docker"],
    "ignorePaths": [
        "go.mod",
        "go.sum",
        "vendor/**"
    ],
    "golang": {
        "enabled": false
    },
    "gomod": {
        "enabled": false
    }
}
